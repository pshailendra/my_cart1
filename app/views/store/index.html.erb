<h1>Welcome to Our Store</h1>
<hr style="border: solid 1px #CCCCCC">
<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th>Image</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%=number_to_currency(product.price) %></td>
        <td><%= image_tag(product.image :thumb) %></td>
        <td><%= button_to '                                      ', line_items_path(product_id: product.id), method: :post, class: "create_product" %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

